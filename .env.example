# إعدادات Flask
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///nira.db

# إعدادات Google OAuth (مطلوبة)
GOOGLE_CLIENT_ID=1234567890-abcdefghijklmnopqrstuvwxyz.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnopqrstuvwxyz

# إعدادات الخادم
PORT=5000
HOST=0.0.0.0

# إعدادات أخرى
DEMO_MODE=false
LOG_LEVEL=INFO
LOG_FILE=logs/nira.log

# إعدادات Web Scraping
SCRAPING_INTERVAL=3600  # بالثواني (كل ساعة)
MAX_JOBS_PER_SOURCE=100

# إعدادات CORS
CORS_ORIGINS=*

# وضع التطوير (true/false)
DEBUG_MODE=false

# إعدادات المصادقة التجريبية
DEMO_MODE=true
DEMO_USER_NAME=مستخدم تجريبي
DEMO_USER_EMAIL=demo@nira.local

